<% if Current.user %>
  Logged in as: <%= Current.user.email %><br>
  <%= link_to 'Edit Password', edit_password_path %>
  <%= button_to 'Logout', logout_path, method: :delete %>
  
  <h2>Articles</h2>
  <% @articles.each do |article| %>
    <h3><%= link_to article.title, article_path(article) %></h3>
    <p>Created by: <%= article.user.email %></p>
    <hr>
  <% end %>
  <%= link_to 'Create New Article', new_article_path, class: 'btn btn-primary' %>


<% else %>
  <%= link_to 'Sign Up', sign_up_path %> or <%= link_to 'Login', sign_in_path %>
<% end %>
