<h1>Articles</h1>
<% @articles.each do |article| %>
  <h2><%= article.title %></h2>
  <p><%= article.body %></p>
  <p>Created by: <%= article.user.email %></p>
<% end %>

<% if Current.user %>
  <%= link_to 'New Article', new_article_path %>
  <%= button_to 'Logout', logout_path, method: :delete %>
<% else %>
  <%= link_to 'Sign Up', sign_up_path %> or <%= link_to 'Login', sign_in_path %>
<% end %>
